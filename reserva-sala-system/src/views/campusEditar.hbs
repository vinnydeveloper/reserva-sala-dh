<section class="card mt-5 mb-3">
    <div class="row justify-content-center align-items-start">

        <div class="col justify-content-center p-5">
            <h1>Editar - {{campus.nome}}</h1>
            <div class="row">
                <form action="/campus/editar/{{campus.id}}" class="col-md-6" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nome" placeholder="nome" id="inputNome"
                            value="{{campus.nome}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="endereco" placeholder="endereÃ§o"
                            id="inputEndereco" value="{{campus.endereco}}">
                    </div>
                    <div class="form-group d-flex flex-wrap justify-content-end mt-5 ">
                        <a href="campus" class="btn btn-default">voltar</a>
                        <button type="submit" class="btn btn-raised btn-primary ">Enviar</button>
                    </div>
                    <div class="form-group">
                        {{#if erros}}
                        <div class="alert alert-warning">

                            {{#each erros}}
                            <p class="m-0">{{this.message}}</p>
                            {{/each}}

                        </div>
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>