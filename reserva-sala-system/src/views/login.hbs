<section>
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6">
        <img src="/images/undraw_events.svg" class="img-responsive" alt="">
      </div>
      <div class="col card justify-content-center">
        <div class="logo">

          {{{message}}}
          DH Salas
        </div>
        <form class="login/auth" method="post">
          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail">
          </div>
          <div class="form-group">
            <label for="inputPassword">Senha</label>
            <input type="password" class="form-control" id="inputPassword">
          </div>
          <div class="form-check">
            <label class="form-check-label" for="lembrarLogin">
              <input type="checkbox" class="form-check-input" id="lembrarLogin">
              <span class="checkmark"></span>
              Lembrar acesso
            </label>
          </div>
          <div class="form-group d-flex flex-wrap justify-content-end my-3">
            <button class="btn  btn-default lowcase">esqueci minha senha</button>
            <button type="submit" class="btn btn-raised btn-primary">Entrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>