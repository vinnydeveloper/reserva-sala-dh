<section>
  <div class="container">
    <div class="row justify-content-center align-items-center mt-5 mb-3">
      <div class="col-md-6">
        <img src="/images/undraw_events.svg" class="img-responsive" alt="">
      </div>
      <div class="col card justify-content-center p-5">
        <h1 class="logo mb-3">
          Login
        </h1>
        <form class="login/auth" method="post" action="/login" novalidate="true">
          <div class="form-group">
            <input name="email" type="email" class="form-control" id="inputEmail" placeholder="email">
          </div>
          <div class="form-group">
            <input name="senha" type="password" class="form-control" id="inputPassword" placeholder="senha">
          </div>
          <div class="form-check">
            <label class="form-check-label" for="lembrarLogin">
              <input type="checkbox" class="form-check-input" id="lembrarLogin">
              <span class="checkmark"></span>
              Lembrar acesso
            </label>
          </div>
          <div class="form-group d-flex flex-wrap justify-content-end my-3">
            <button class="btn  btn-default lowcase">esqueci minha senha</button>
            <button type="submit" class="btn btn-raised btn-primary">Entrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
