<section class="card mt-5 mb-3">
    <div class="row justify-content-center align-items-start">

        <div class="col justify-content-center p-5">
            <h1>Editar - {{sala.nome}}</h1>
            <div class="row">
                <form action="/salas/editar/{{sala.id}}" class="col-md-6" method="post">
                    <input type="hidden" name="campusId" value="{{sala.id}}">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nome" placeholder="nome" id="inputNome"
                            value="{{sala.nome}}">
                    </div>
                    <div class="form-group">
                        <select name="campus_id" id="campus_id" class="form-control">
                            <option disabled>selecione o campus</option>
                            {{#each listaCampus}}
                            {{#if (eq sala.campus_id id)}}
                            <option value="{{id}}" selected>{{nome}}</option>
                            {{else}}
                            <option value="{{id}}">{{nome}}</option>
                            {{/if}}
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="lotacao" placeholder="lotacao" id="inputLotacao"
                            value="{{sala.lotacao}}">
                    </div>
                    <div class="form-group">
                        <textarea name="descricao" id="descricao" class="form-control" placeholder="descrição"
                            value="{{sala.descricao}}"></textarea>
                    </div>
                    <div class="form-group d-flex flex-wrap justify-content-end mt-5 ">
                        <button type="submit" class="btn btn-raised btn-primary ">Enviar</button>
                    </div>
                    <div class="form-group">
                        {{#if erros}}
                        <div class="alert alert-warning">

                            {{#each erros}}
                            <p class="m-0">{{this.message}}</p>
                            {{/each}}

                        </div>
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>